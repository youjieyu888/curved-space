\begin_body

\begin_layout Standard
\begin_inset Formula $E(\rho,z)=e^{ikz-i\omega t}e^{-\rho^{2}/(2\sigma_{I}^{2})}e^{i\phi(\rho)}$
\end_inset

(intensity: Gaussian model.
 Random phase: first order uniform, second correlation is Gaussian)
\end_layout

\begin_layout Standard
\begin_inset Formula $<E^{*}(\rho_{1},z)E(\rho_{2},z)>=e^{-(\rho_{1}^{2}+\rho_{2}^{2})/\sigma_{I}^{2}}<e^{i(\phi(\rho_{2})-\phi(\rho_{1}))}>$
\end_inset


\end_layout

\begin_layout Standard
since 
\begin_inset Formula $<\phi(\rho)>=0$
\end_inset

, we have:
\end_layout

\begin_layout Standard
\begin_inset Formula $<E^{*}(\rho_{1},z)E(\rho_{2},z)>=e^{-(\rho_{1}^{2}+\rho_{2}^{2})/\sigma_{I}^{2}}e^{-\frac{1}{2}<(\phi(\rho_{2})-\phi(\rho_{1}))^{2}>}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $<(\phi(\rho_{2})-\phi(\rho_{1}))^{2}>=<\phi^{2}(\rho_{2})>+<\phi^{2}(\rho_{1})>-2<\phi(\rho_{1})\phi(\rho_{2})>=const-2e^{-\frac{(\rho_{1}-\rho_{2})^{2}}{\sigma_{I}^{2}}}$
\end_inset


\end_layout

\begin_layout Standard
(
\begin_inset Formula $\sigma_{I}$
\end_inset

 is the coherent length, 
\begin_inset Formula $\sigma_{I}\rightarrow\infty$
\end_inset

 is perfect coherent.)
\end_layout

\begin_layout Standard
keep the fist order of 
\begin_inset Formula $<\phi(\rho_{1})\phi(\rho_{2})>$
\end_inset

, we have:
\end_layout

\begin_layout Standard
\begin_inset Formula $<E^{*}(\rho_{1},z)E(\rho_{2},z)>=e^{-(\rho_{1}^{2}+\rho_{2}^{2})/\sigma_{I}^{2}}e^{-\frac{(\rho_{1}-\rho_{2})^{2}}{\sigma_{I}^{2}}}$
\end_inset


\end_layout

\end_body
